{
  "version": 1.1,
  "atDirectives": [
    {
      "name": "@plugin",
      "description": "Import a Tailwind CSS plugin",
      "references": [
        {
          "name": "Tailwind CSS v4 @plugin directive",
          "url": "https://tailwindcss.com/docs/plugins"
        }
      ]
    },
    {
      "name": "@theme",
      "description": "Define theme configuration inline",
      "references": [
        {
          "name": "Tailwind CSS v4 @theme directive",
          "url": "https://tailwindcss.com/docs/theme"
        }
      ]
    },
    {
      "name": "@utility",
      "description": "Define custom utility classes",
      "references": [
        {
          "name": "Tailwind CSS v4 @utility directive",
          "url": "https://tailwindcss.com/docs/adding-custom-styles"
        }
      ]
    },
    {
      "name": "@custom-variant",
      "description": "Define custom variant modifiers",
      "references": [
        {
          "name": "Tailwind CSS v4 @custom-variant directive",
          "url": "https://tailwindcss.com/docs/adding-custom-styles"
        }
      ]
    }
  ]
}
